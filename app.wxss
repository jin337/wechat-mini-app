/**app.wxss**/
page {
  position: relative;
  min-height: 100vh;
}
button {
  line-height: 1;
  width: 100% !important;
  padding: 0;
  color: #fff;
  border-color: rgba(27, 31, 35, 0.15);
  border-radius: 0;
  background-color: #2ea44f;
  box-shadow: 0 1rpx 0 rgba(27, 31, 35, 0.1),
  inset 0 1rpx 0 hsla(0, 0%, 100%, 0.03);
}
button::after {
  border: none;
}
input {
  list-style: none;
  border: none;
  outline: none;
}